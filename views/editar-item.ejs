<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Editar Produto</title>
  <link rel="stylesheet" href="/css/editar-item.css">
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="cadastro-item-container">
    <h2><u>Editar Produto</u></h2>
    <form action="/painel/produto/<%= produto.id %>/editar" method="POST">
      <div class="form-layout">
        <div class="left-column">
          <div class="form-group">
            <label>Nome do Produto</label>
            <input type="text" name="nome" value="<%= produto.nome %>" required>
          </div>
          <div class="form-group">
            <label>Descrição</label>
            <textarea name="descricao" rows="6" required><%= produto.descricao %></textarea>
          </div>
          <div class="form-group">
            <label>Preço (R$)</label>
            <input type="number" name="preco" step="0.01" value="<%= produto.preco %>" required>
          </div>
          <div class="form-group">
            <label>Tags</label>
            <input type="text" name="tags" value="<%= produto.tags %>">
          </div>
        </div>

        <div class="right-column">
          <div class="form-group">
            <label>Marca</label>
            <input type="text" value="<%= produto.marca %>" readonly>
          </div>
          <div class="form-group">
            <label>Tipo</label>
            <input type="text" value="<%= produto.tipo %>" readonly>
          </div>
          <div class="form-group">
            <label>Categoria</label>
            <input type="text" value="<%= produto.categoria %>" readonly>
          </div>
          <div class="form-group">
            <label>Modelo</label>
            <input type="text" value="<%= produto.modelo %>" readonly>
          </div>
          <div class="form-group">
            <label>Condição</label>
            <input type="text" value="<%= produto.condicao %>" readonly>
          </div>
        </div>
      </div>

      <hr>

      <div class="form-layout">
        <div class="left-column">
          <div class="form-group">
            <label>Ano de Fabricação</label>
            <input type="number" value="<%= produto.ano_fabricacao %>" readonly>
          </div>
          <div class="form-group">
            <label>País de Fabricação</label>
            <input type="text" value="<%= produto.pais_fabricacao %>" readonly>
          </div>
          <div class="form-group">
            <label>Cor</label>
            <input type="text" value="<%= produto.cor %>" readonly>
          </div>
          <div class="form-group">
            <label>Acabamento</label>
            <input type="text" value="<%= produto.acabamento %>" readonly>
          </div>
        </div>

        <div class="right-column">
          <div class="form-group">
            <label>Madeira (corpo)</label>
            <input type="text" value="<%= produto.madeira %>" readonly>
          </div>
          <div class="form-group">
            <label>Configuração de Captadores</label>
            <input type="text" value="<%= produto.captadores_config %>" readonly>
          </div>
          <div class="form-group">
            <label>Número de Cordas</label>
            <input type="number" value="<%= produto.cordas %>" readonly>
          </div>
        </div>
      </div>

      <button type="submit">Salvar Alterações</button>
    </form>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
