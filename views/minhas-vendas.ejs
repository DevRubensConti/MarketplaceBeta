<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Minhas Vendas</title>
  <link rel="stylesheet" href="/css/pedidos.css">
</head>
<body>
  <%- include('partials/navbar.ejs') %>

  <main class="vendas-container">
    <h1>ğŸ“¦ Minhas Vendas</h1>

    <% if (vendas.length > 0) { %>
      <section class="vendas-grid">
        <% vendas.forEach(venda => { %>
          <div class="venda-card">
            <div class="venda-img">
              <% if (venda.produtos && venda.produtos.imagem_url) { %>
                <img src="<%= venda.produtos.imagem_url.split(',')[0] %>" alt="Produto">
              <% } else { %>
                <div class="no-img">Sem imagem</div>
              <% } %>
            </div>
            <div class="venda-info">
              <h3><%= venda.produtos ? venda.produtos.nome : 'Produto removido' %></h3>
              <p><strong>PreÃ§o:</strong> R$ <%= venda.preco_total %></p>
              <p><strong>Status:</strong> <%= venda.status %></p>
              <p><strong>Comprador:</strong> <%= venda.usuarios_pf ? venda.usuarios_pf.nome : 'Desconhecido' %></p>
              <p><strong>Data:</strong> <%= new Date(venda.data_pedido).toLocaleDateString() %></p>
            </div>
          </div>
        <% }) %>
      </section>
    <% } else { %>
      <p class="no-vendas">VocÃª ainda nÃ£o realizou nenhuma venda.</p>
    <% } %>
  </main>

  <%- include('partials/footer.ejs') %>
</body>
</html>
