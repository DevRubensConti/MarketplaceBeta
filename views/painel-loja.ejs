<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Painel da Loja</title>
  <link rel="stylesheet" href="/css/painel-loja.css">
</head>
<body>
  <%- include('partials/navbar') %>

  <main class="painel-container">
    <h2>Bem-vindo, <%= loja.nomeFantasia %>!</h2>

    <section class="dados-loja">
      <img src="<%= loja.icone_url || '/images/store_logos/store.png' %>" alt="Logo da loja" class="logo-loja">
      <p><strong>CNPJ:</strong> <%= loja.cnpj %></p>
      <p><strong>Email:</strong> <%= loja.email %></p>
      <p><strong>Telefone:</strong> <%= loja.telefone %></p>
      <a href="/painel/editar-loja" class="btn-editar">Editar dados da loja</a>
    </section>

    <section class="produtos-listados">
      <h3>Produtos da Loja</h3>
      <a href="/cadastro-item" class="btn-novo-produto">+ Novo Produto</a>
      <div class="grid-produtos">
        <% produtos.forEach(item => { %>
          <div class="card-produto">
            <img src="<%= item.imagem_url?.split(',')[0] %>" alt="Imagem do produto">
            <h4><%= item.nome %></h4>
            <p>R$ <%= item.preco %></p>
            <div class="botoes">
              <a href="/painel/produto/<%= item.id %>/editar" class="btn-editar">Editar</a>
              <form id="form-excluir-<%= item.id %>" action="/produto/<%= item.id %>/excluir" method="POST" style="display: none;"></form>
              <button
                type="button"
                class="btn-excluir"
                data-id="<%= item.id %>"
                data-nome="<%= item.nome.replace(/"/g, '&quot;') %>">
                Excluir Produto
              </button>
            </div>
          </div>
        <% }) %>
      </div>
    </section>
    <div id="popup-confirmacao" class="popup-modal" style="display: none;">
      <div class="popup-conteudo">
        <p id="mensagem-confirmacao"></p>
        <div class="popup-botoes">
          <button id="cancelar-btn">Cancelar</button>
          <button id="confirmar-btn">Confirmar Exclus√£o</button>
        </div>
      </div>
    </div>
  </main>

  <%- include('partials/footer') %>
    <script>
      let idProdutoSelecionado = null;

      document.querySelectorAll('.btn-excluir').forEach(botao => {
        botao.addEventListener('click', () => {
          const id = botao.dataset.id;
          const nome = botao.dataset.nome;
          idProdutoSelecionado = id;

          document.getElementById('mensagem-confirmacao').textContent =
            `Tem certeza que deseja excluir o produto "${nome}"?`;

          document.getElementById('popup-confirmacao').style.display = 'flex';
        });
      });

      document.getElementById('cancelar-btn').addEventListener('click', () => {
        document.getElementById('popup-confirmacao').style.display = 'none';
        idProdutoSelecionado = null;
      });

      document.getElementById('confirmar-btn').addEventListener('click', () => {
        if (idProdutoSelecionado) {
          document.getElementById(`form-excluir-${idProdutoSelecionado}`).submit();
        }
      });
    </script>

</body>
</html>
