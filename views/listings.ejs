<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title>Lista de Produtos</title>
  <link rel="stylesheet" href="/css/listings.css" />
</head>
<body>
  <!-- Navbar -->
  <%- include('partials/navbar.ejs') %>

  <main class="listagem-container">
    <!-- Filtros laterais -->
    <aside class="filtros">
      <h2>Filtrar por</h2>

      <div class="filtro-box">
        <h3>Pesquisa</h3>
        <input type="text" placeholder="Buscar instrumento..." />
      </div>

      <div class="filtro-box">
        <h3>Preço (R$)</h3>
        <div class="slider-preco">
          <span>Mín: R$ <span id="preco-min">0</span></span>
          <input type="range" id="range-min" min="0" max="10000" step="50" value="0">
      
          <span>Máx: R$ <span id="preco-max">10000</span></span>
          <input type="range" id="range-max" min="0" max="10000" step="50" value="10000">
        </div>
      </div>
      <div class="filtro-box">
        <label><input type="checkbox" /> Produtos em Promoção</label>
      </div>
      <div class="filtro-box">
        <h3>Tipo de Instrumento</h3>
        <label><input type="checkbox" /> Guitarra</label>
        <label><input type="checkbox" /> Violão</label>
        <label><input type="checkbox" /> Baixo</label>
        <label><input type="checkbox" /> Teclado</label>
        <label><input type="checkbox" /> Bateria</label>
      </div>

      <div class="filtro-box">
        <h3>Marcas</h3>
        <label><input type="checkbox" /> Fender</label>
        <label><input type="checkbox" /> Tagima</label>
        <label><input type="checkbox" /> Gibson</label>
        <label><input type="checkbox" /> Yamaha</label>
        <label><input type="checkbox" /> Ibanez</label>
      </div>
      <!-- Cor -->
      <div class="filtro-box">
        <h3>Cor</h3>
        <select class="select-cor">
          <option value="">Todas</option>
          <option value="Preto">Preto</option>
          <option value="Branco">Branco</option>
          <option value="Vermelho">Vermelho</option>
          <option value="Azul">Azul</option>
          <option value="Natural">Natural</option>
          <option value="Sunburst">Sunburst</option>
        </select>
      </div>

      <!-- Condição -->
      <div class="filtro-box">
        <h3>Condição</h3>
        <select class="select-condicao">
          <option value="">Todas</option>
          <option value="Novo">Novo (lacrado)</option>
          <option value="Usado - excelente">Usado (excelente estado)</option>
          <option value="Usado - bom">Usado (bom estado)</option>
          <option value="Com marcas de uso">Com marcas de uso</option>
          <option value="Para peças/reparo">Somente para peças/reparo</option>
        </select>
      </div>

      <!-- Promoção -->


    </aside>

    <!-- Lista de produtos -->
    <section class="produtos">
      <h2>Instrumentos Disponíveis</h2>
      <div class="grid-produtos">
        <% produtos.forEach(item => { %>
          <div class="card-produto">
            <img src="<%= item.imagem_url %>" alt="Imagem do produto">
            <h4><%= item.nome %></h4>
            <p>R$ <%= item.preco %></p>
            <p class="tags"><strong>Tags:</strong> <%= item.tags %></p>
            <button>Ver mais</button>
          </div>
        <% }) %>
      </div>
    </section>
  </main>

  <!-- Footer -->
  <%- include('partials/footer.ejs') %>
</body>
</html>
