<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Cadastrar Item</title>
  <link rel="stylesheet" href="/css/cadastro-item.css">
  <style>
    body { background-color: red !important; }
  </style>
  
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="cadastro-item-container">
    <h2><u>Cadastrar Novo Item</u></h2>
    <form action="/cadastro-item" method="POST" enctype="multipart/form-data">
      <div class="form-layout">

        <div class="left-column">
          <div class="form-group">
            <label>Imagem</label>
            <div style="height: 250px; background: rgba(255,255,255,0.2); border: 1px dashed #ccc; display: flex; align-items: center; justify-content: center; color: white;">
              <input type="file" name="imagem" accept="image/*" required>
            </div>
          </div>
          

          <div class="form-group">
            <label>Marca</label>
            <input type="text" name="marca">
          </div>

          <div class="form-group">
            <label>Tipo</label>
            <input type="text" name="tipo">
          </div>
        </div>

        <div class="right-column">
          <div class="form-group">
            <label>Nome do Item</label>
            <input type="text" name="nome" required>
          </div>

          <div class="form-group">
            <label>Descrição</label>
            <textarea name="descricao" rows="6"></textarea>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label>Preço (R$)</label>
              <input type="number" name="preco" step="0.01" required>
            </div>
            <div class="form-group">
              <label>Condição</label>
              <select name="condicao">
                <option value="Novo">Novo</option>
                <option value="Usado">Usado</option>
              </select>
            </div>
          </div>
        </div>
      </div>
      <button type="submit">Cadastrar Item</button>
    </form>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
