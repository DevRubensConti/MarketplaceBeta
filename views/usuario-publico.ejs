<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title><%= usuario.nome %> - Perfil Público</title>
  <link rel="stylesheet" href="/css/usuario-publico.css">
</head>
<body>
  <%- include('partials/navbar') %>

  <main class="perfil-publico-container">
    <section class="cabecalho-usuario">
      <img src="<%= usuario.icone_url || '/images/default-user.png' %>" alt="Foto de perfil" class="foto-usuario">
      <div class="dados-usuario">
        <h2><%= usuario.nome %></h2>
        <p><strong>Email:</strong> <%= usuario.email %></p>
        <% if (usuario.telefone) { %>
          <p><strong>Telefone:</strong> <%= usuario.telefone %></p>
        <% } %>
      </div>
    </section>

    <section class="produtos-listados">
      <h3>Produtos Anunciados</h3>
      <div class="grid-produtos">
        <% produtos.forEach(item => { %>
          <div class="card-produto">
            <a href="/item/<%= item.id %>">
              <img src="<%= item.imagem_url?.split(',')[0] %>" alt="Imagem do produto">
              <h4><%= item.nome %></h4>
              <p>R$ <%= item.preco %></p>
            </a>
          </div>
        <% }) %>
        <% if (produtos.length === 0) { %>
          <p>Este usuário ainda não possui anúncios.</p>
        <% } %>
      </div>
    </section>
  </main>

  <%- include('partials/footer') %>
</body>
</html>
